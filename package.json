{
  "name": "gustavogonz.com.br",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm run services:up && next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "services:up": "docker compose -f src/infra/compose.yaml up -d",
    "services:stop": "docker compose -f src/infra/compose.yaml stop",
    "services:down": "docker compose -f src/infra/compose.yaml down",
    "test": "jest --runInBand",
    "test:watch": "jest --watch --runInBand",
    "migration:create": "node-pg-migrate -m src/infra/migrations create",
    "migration:up": "node-pg-migrate -m src/infra/migrations --envPath .env.development up"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "next": "14.2.12",
    "node-pg-migrate": "^7.6.1",
    "pg": "^8.13.0",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/node": "^20",
    "@types/pg": "^8.11.10",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "eslint": "^8",
    "eslint-config-next": "14.2.12",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.2.5",
    "typescript": "^5"
  }
}
