{
  "name": "gustavogonz.com.br",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm run services:up && pnpm run wait-for-postgres && pnpm run migration:up && next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint --dir .",
    "services:up": "docker compose -f src/infra/compose.yaml up -d",
    "services:stop": "docker compose -f src/infra/compose.yaml stop",
    "services:down": "docker compose -f src/infra/compose.yaml down",
    "test": "pnpm run services:up && concurrently -n next,jest --hide next -k -s command-jest --prefix none \"next dev\" \"jest --runInBand\"",
    "test:watch": "jest --watch --runInBand",
    "migration:create": "node-pg-migrate -m src/infra/migrations create",
    "migration:up": "node-pg-migrate -m src/infra/migrations --envPath .env.development up",
    "migration:up:prod": "node-pg-migrate -m src/infra/migrations up",
    "wait-for-postgres": "ts-node src/infra/scripts/wait-for-postgres.ts",
    "prepare": "husky",
    "commit": "cz"
  },
  "dependencies": {
    "async-retry": "^1.3.3",
    "dotenv": "^16.4.5",
    "dotenv-expand": "^11.0.6",
    "next": "14.2.12",
    "node-pg-migrate": "^7.7.1",
    "pg": "^8.13.0",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.5.0",
    "@commitlint/config-conventional": "^19.5.0",
    "@jest/globals": "^29.7.0",
    "@types/async-retry": "^1.4.9",
    "@types/node": "^20.16.11",
    "@types/pg": "^8.11.10",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "commitizen": "^4.3.1",
    "concurrently": "^9.0.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.1",
    "eslint-config-next": "14.2.12",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "tailwindcss": "^3.4.13",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
